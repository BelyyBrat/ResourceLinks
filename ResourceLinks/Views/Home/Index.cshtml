@{
  Layout = "_Layout";
}
@using System.Security.Claims
<div class ="homepage">
  <div class="jumbotron">
    <h1>Welcome to the Resource Links!</h1>
    
  </div>
  <h4 id="tagline">Share links to web resources! Log in to be able to add, edit, and delete!</h4>
</div>
