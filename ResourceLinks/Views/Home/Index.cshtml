@* <img src="https://d34u8crftukxnk.cloudfront.net/slackpress/prod/sites/6/unfurl-slack-resources-en@2x.jpg" class="img-fluid"> *@


<div class="footer">
  <div class="link">
    <p>@Html.ActionLink("See all categories", "Index", "Categories")</p>
  </div>
  <div class="link">
    <p>@Html.ActionLink("See all tags", "Index", "Tags")</p>
  </div>
  <div class="link">
    <p>@Html.ActionLink("See all links", "Index", "Links")</p>
  </div>
  @if(!User.Identity.IsAuthenticated)
  {
    <div class="link">
      <p>@Html.ActionLink("Create an account", "Index", "Account")</p>
    </div>
    <div class="link">
      <p>@Html.ActionLink("Log in", "Login", "Account")</p>
    </div>
  }
  else
  {
    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logout"}))
    {
      <input type="submit" class="btn btn-default logoutButton" value="Log out" />
    }
  }
  
</div>