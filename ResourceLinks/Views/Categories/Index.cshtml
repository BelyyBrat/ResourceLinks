@{
  Layout = "_Layout";
}

@using ResourceLinks.Models;
@model List<ResourceLinks.Models.Category>;
<div class="jumbotron">
  <h1>Categories</h1>
</div>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

<ul>
  @foreach (Category category in Model)
  {
    <h3>@Html.ActionLink($"{category.Title}", "Details", new { id = category.CategoryId })</h3>
    @if(User.Identity.IsAuthenticated)
    {
      <p>
        @Html.ActionLink("Edit", "Edit", new { id = category.CategoryId}) | 
        @Html.ActionLink("Delete", "Delete", new { id = category.CategoryId})
      </p>  
    }
    
  }
</ul>

<div class="footer">
  @if(User.Identity.IsAuthenticated)
  {
    <div class="link">
      @Html.ActionLink("Add new category", "Create")
    </div>  
  }
  
  <div class="link">
    @Html.ActionLink("Home", "Index", "Home")
  </div>
</div>
